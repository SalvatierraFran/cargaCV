<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Verde"
    android:orientation="vertical"
    tools:context="com.example.francosalvatierra.cargacv.ExperienciaFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Experiencia Laboral"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresa"/>

        <EditText
            android:id="@+id/empresa_etexp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/Blanco" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="27dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puesto"/>

        <EditText
            android:id="@+id/puesto_etexp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/Blanco"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="27dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle"/>

        <EditText
            android:id="@+id/detalle_etexp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@color/Blanco"/>

    </LinearLayout>

    <Button
        android:id="@+id/guardar_btnexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"/>

</LinearLayout>
